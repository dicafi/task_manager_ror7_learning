<%= link_to("Back to List", categories_path, class: 'back-link') %>

<div class="categories show">
  <h2>Show Category</h2>

  <div class="actions">
    <%= link_to('Edit', edit_category_path(@category)) %>
    <%= link_to('Delete', delete_category_path(@category)) %>
  </div>

  <table summary="Category detail view">
    <tr>
      <th>Name</th>
      <td><%= @category.name %></td>
    </tr>
    <tr>
      <th>Tasks related</th>
      <td>
        <%= @category.related_tasks %>
      </td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @category.created_at.to_fs(:long) %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @category.updated_at.to_fs(:long) %></td>
    </tr>
  </table>

</div>
